{

  "compilerOptions": {
    "target": "ES5",
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": "app",
    "removeComments": false,
    "noImplicitReturns": true,
		"lib": ["es5","es2015.promise","dom", "scripthost"],
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "types": ["node", "restify", "chai", "chai-http", "chai-as-promised", "turf"],
	"rootDirs": [ "app" ],
    "outDir": "built",
	"experimentalDecorators": true
  },
  "include": [ "app/"],
  "exclude": [
    "logs",
    "node_modules"
  ]
}
