{

  "compilerOptions": {
    "target": "es2015",
    "sourceMap": true,
    "module": "commonjs",
    "baseUrl": ".",
    "removeComments": false,
    "noImplicitReturns": true,
    "paths": 
      {"shared/*": ["../shared/*"]},
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "types": ["node", "restify", "chai", "chai-http", "chai-as-promised"],
    "outDir": "built",
		"experimentalDecorators": true
  },
  "exclude": [
    "logs",
    "node_modules"
  ]
}
