{
  "name": "openride-server",
  "version": "1.0.0",
  "description": "OpenRide server",
  "main": "built/server/app/app.js",
  "scripts": {
    "compile": "node_modules/.bin/tsc",
    "start": "node built/server/app/app.js",
    "refresh": "npm run compile && npm start",
    "watch": "nodemon",
    "test": "npm run compile && mocha built/server/test",
    "watch-test": "nodemon -w app -w test -V --exec 'npm run compile && (mocha built/server/test || true)'"
  },
  "keywords": [
    "typescript",
    "restify"
  ],
  "author": "Lo√Øc Coenen",
  "license": "MIT",
  "dependencies": {
    "catnapify": "^0.1.20",
    "chai-as-promised": "^7.1.1",
    "es6-promise": "^4.2.4",
    "geojson": "^0.5.0",
    "module-alias": "^2.0.6",
    "moment": "^2.22.2",
    "mongodb": "^3.1.3",
    "redis": "^2.8.0",
    "restify": "^4.1.1",
    "restify-cors-middleware": "^1.1.1",
    "restify-session": "^1.1.1",
    "turf": "^3.0.14"
  },
  "devDependencies": {
    "@types/chai": "^3.5.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.4",
    "@types/es6-promise": "^3.3.0",
    "@types/geojson": "^7946.0.4",
    "@types/mocha": "^2.2.48",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.0.5",
    "@types/node": "^6.0.101",
    "@types/redis": "^2.8.6",
    "@types/restify": "^2.0.42",
    "@types/restify-cors-middleware": "^1.0.1",
    "@types/sinon": "^1.16.31",
    "@types/turf": "^3.5.32",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "mocha": "^3.5.3",
    "mongod": "^2.0.0",
    "ts-node": "^5.0.1",
    "tslint": "^3.15.1",
    "typescript": "^2.0.3"
  },
  "_moduleAliases": {
    "shared": "../shared"
  },
  "nodemonConfig": {
    "watch": [
      "app",
      "../shared/*"
    ],
    "ext": "ts",
    "exec": "npm run refresh"
  }
}
